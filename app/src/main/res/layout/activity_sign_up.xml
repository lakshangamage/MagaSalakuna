<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".View.SignUpActivity">

    <LinearLayout
        android:id="@+id/imageLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.9">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Friends would like to know about you."
            android:id="@+id/textView"
            android:textSize="25dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:padding="20dp" />

        <com.github.siyamed.shapeimageview.CircularImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/addprofilepicbtn"
            android:layout_gravity="center"
            android:scaleType="center"
            app:siBorderWidth="4dp"
            app:siBorderColor="#d1d2d3"
            android:backgroundTint="@color/com_facebook_button_background_color_focused"
            android:background="@drawable/grouimage"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:id="@+id/firstnametxt"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:textColor="#000000"
                    android:textColorHint="#ffffff"
                    android:hint="First Name"
                    android:gravity="left|center"
                    android:background="#56ffffff"
                    android:padding="5dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:id="@+id/lastnametxt"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:layout_margin="5dp"
                    android:gravity="left|center"
                    android:hint="Last Name"
                    android:textColor="#000000"
                    android:textColorHint="#ffffff"
                    android:background="#56ffffff"
                    android:padding="5dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:id="@+id/emailtxt"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:textColor="#000000"
                    android:textColorHint="#ffffff"
                    android:hint="Email Address"
                    android:gravity="left|center"
                    android:background="#56ffffff"
                    android:padding="5dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:id="@+id/passwordtxt"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:textColor="#000000"
                    android:textColorHint="#ffffff"
                    android:hint="Choose a Password"
                    android:gravity="left|center"
                    android:background="#56ffffff"
                    android:padding="5dp"
                    android:inputType="textPassword"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:id="@+id/birthdaytxt"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:textColor="#000000"
                    android:textColorHint="#ffffff"
                    android:hint="Birthday"
                    android:gravity="left|center"
                    android:background="#56ffffff"
                    android:padding="5dp"
                    android:focusable="false"
                    android:inputType="date"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:id="@+id/gendertxt"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:textColor="#000000"
                    android:editable="false"
                    android:textColorHint="#ffffff"
                    android:hint="Gender"
                    android:gravity="left|center"
                    android:background="#56ffffff"
                    android:padding="5dp" />
                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">
                    <RadioButton android:id="@+id/radio_pirates"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:gravity="left|center"
                        android:padding="5dp"
                        android:layout_margin="5dp"/>
                    <RadioButton android:id="@+id/radio_ninjas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female"
                        android:gravity="left|center"
                        android:padding="5dp"
                        android:layout_margin="5dp"/>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:id="@+id/phonetxt"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:textColor="#000000"
                    android:textColorHint="#ffffff"
                    android:hint="Phone Number"
                    android:gravity="left|center"
                    android:background="#56ffffff"
                    android:padding="5dp"
                    android:inputType="phone"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.3">

        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Sign Up"
            android:id="@+id/signupbtn"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:background="#35a12b"
            android:textSize="25dp"
            android:gravity="center" />
    </LinearLayout>
</LinearLayout>
</ScrollView>